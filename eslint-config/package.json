{
  "name": "@arabasta/eslint-config",
  "version": "1.0.10",
  "type": "commonjs",
  "description": "Custom ESLint config to share between my projects. Originally extracted from vite-workshop (https://github.com/HristoKolev/vite-workshop)",
  "author": "Hristo Kolev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CloudNStoyan/arabasta.git",
    "directory": "eslint-config"
  },
  "types": "./src/index.d.ts",
  "main": "./src/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./src/index.d.mts",
        "default": "./src/index.mjs"
      },
      "require": {
        "types": "./src/index.d.ts",
        "default": "./src/index.js"
      }
    }
  },
  "scripts": {
    "format": "prettier --cache --write .",
    "format-check": "prettier --cache --check .",
    "generate-resolved-configs": "rimraf resolved-configs/generated && node resolved-configs/generate.js && npm run format",
    "fail-on-uncommitted-changes": "git add . && git diff --quiet && git diff --cached --quiet",
    "test": "npm run generate-resolved-configs && npm run fail-on-uncommitted-changes || echo \"Changes detected after generating resolved-configs configs.\" && git status && npm run fail-on-uncommitted-changes"
  },
  "dependencies": {
    "@arabasta/eslint-plugin-javascript": "^1",
    "@arabasta/eslint-plugin-react": "^1",
    "@arabasta/eslint-plugin-testing-library": "^1",
    "@arabasta/eslint-plugin-tsoa": "^1",
    "@arabasta/eslint-plugin-typescript": "^1",
    "@eslint-community/eslint-plugin-eslint-comments": "^4",
    "@eslint/eslintrc": "^3",
    "@eslint/js": "^9",
    "@vitest/eslint-plugin": "^1",
    "confusing-browser-globals": "^1",
    "eslint-config-prettier": "^10",
    "eslint-import-resolver-alias": "^1",
    "eslint-import-resolver-typescript": "^4",
    "eslint-plugin-deprecation": "^3",
    "eslint-plugin-es": "^4",
    "eslint-plugin-import": "^2",
    "eslint-plugin-jest": "^28",
    "eslint-plugin-jsdoc": "^52",
    "eslint-plugin-jsx-a11y": "^6",
    "eslint-plugin-new-with-error": "^5",
    "eslint-plugin-react": "^7",
    "eslint-plugin-react-hooks": "^5",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-testing-library": "^7",
    "eslint-plugin-unused-imports": "^3",
    "globals": "^16",
    "typescript-eslint": "~8.14"
  },
  "devDependencies": {
    "eslint": "^8",
    "prettier": "^3",
    "rimraf": "^6.0.1"
  },
  "peerDependencies": {
    "eslint": "^8",
    "typescript": ">=4.8.4 <5.9.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "license": "MIT",
  "keywords": [
    "eslint",
    "eslint-config",
    "eslintconfig"
  ]
}
