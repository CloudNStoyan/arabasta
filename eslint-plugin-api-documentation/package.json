{
  "name": "@arabasta/eslint-plugin-api-documentation",
  "version": "1.0.0",
  "type": "commonjs",
  "description": "ESLint plugin that enforces api documentation",
  "author": "Stoyan Kolev",
  "repository": {
    "type": "git",
    "url": "https://github.com/CloudNStoyan/arabasta"
  },
  "types": "./index.d.ts",
  "main": "./dist/eslint-plugin-api-documentation.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./index.d.ts",
      "default": "./dist/eslint-plugin-api-documentation.js"
    }
  },
  "scripts": {
    "format": "prettier --cache --write .",
    "format-check": "prettier --cache --check .",
    "lint:eslint-docs": "eslint-doc-generator --check",
    "update:eslint-docs": "eslint-doc-generator",
    "prebuild": "rimraf dist",
    "build": "tsc --p tsconfig.build.json",
    "test": "vitest run --dir ./src/rules && npm run lint:eslint-docs && npm run format-check",
    "typecheck": "tsc --p tsconfig.json --noEmit"
  },
  "dependencies": {
    "@es-joy/jsdoccomment": "^0.49.0",
    "@typescript-eslint/utils": "^8.8.1"
  },
  "devDependencies": {
    "@typescript-eslint/rule-tester": "^8.8.1",
    "eslint-doc-generator": "^1.7.1",
    "json-schema-to-typescript": "^15.0.2",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "typescript": "~5.3.3",
    "typescript-eslint": "^8.8.1",
    "vitest": "^2.1.2"
  },
  "peerDependencies": {
    "@typescript-eslint/parser": ">= 7.0.0",
    "eslint": ">=8.0.0",
    "typescript": ">= 5.0.0"
  },
  "license": "MIT",
  "keywords": [
    "eslint",
    "eslint-plugin",
    "eslintplugin",
    "api-documentation",
    "api",
    "documentation"
  ]
}
