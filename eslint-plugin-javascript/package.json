{
  "name": "@arabasta/eslint-plugin-javascript",
  "version": "1.0.0",
  "type": "commonjs",
  "description": "ESLint plugin for javascript rules",
  "author": "Stoyan Kolev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CloudNStoyan/arabasta.git",
    "directory": "eslint-plugin-javascript"
  },
  "files": [
    "dist",
    "package.json",
    "README.md",
    "LICENSE",
    "index.d.ts"
  ],
  "types": "./index.d.ts",
  "main": "./dist/eslint-plugin-javascript.js",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "default": "./dist/eslint-plugin-javascript.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "rimraf dist && tsc --p tsconfig.build.json",
    "format": "prettier --cache --write .",
    "format-check": "prettier --cache --check .",
    "test": "vitest run --dir ./src/rules",
    "typecheck": "tsc --p tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@types/eslint": "~9.6.0",
    "@types/estree": "^1.0.6",
    "@types/node": "^22.13.8",
    "eslint": "~9.21.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "typescript": "~5.8.2",
    "vitest": "^2.1.9"
  },
  "peerDependencies": {
    "eslint": ">=8.0.0"
  },
  "license": "MIT",
  "keywords": [
    "eslint",
    "eslint-plugin",
    "eslintplugin",
    "javascript"
  ]
}
